algoritmo "somaAmaisB"
var
   x, y, soma: inteiro
procedimento soma(a,b: inteiro)
inicio
   escreval("--------------------------")
   escreval("X: ", a)
   escreval("Y: ", b)
   escreva("A soma entre X e Y é: ", (a + b))
fimprocedimento
inicio
   escreva("Digite o valor de X: ")
   leia(x)

   escreva("Digite o valor de Y: ")
   leia(y)

   soma(x,y)
fimalgoritmo